{#
	Param(s):
		\Wongyip\Laravel\Renderable\ColumnRenderable  CR
#}
{% macro handle(CR) %}

	{% if CR.type == 'ol' %}
	
		<ol>
		{% for li in CR.value %}
			<li>{{ isHTML ? li|raw : li }}</li>
		{% endfor %}
		</ol>
		
	{% elseif type == 'ul' %}
	
		<ul>
		{% for li in CR.value %}
			<li>{{ isHTML ? li|raw : li }}</li>
		{% endfor %}
		</ul>
		
	{% else %}
	
		{{ CR.isHTML ? CR.value|raw : CR.value }}
		
	{% endif %}

{% endmacro %}
